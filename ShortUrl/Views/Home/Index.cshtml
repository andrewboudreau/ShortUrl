@using ShortUrl.Models
@model ShortUrl.Models.ShortenedUrl

@{
    ViewBag.Title = "Url Shortener";
}

<div class="jumbotron">
    <h1>Shorten Url</h1>
    <form id="Shorten" action="@Url.Action("Index", "Shorten")">
        <p class="lead">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = "enter a valid url" })
                @Html.ValidationMessageFor(m => m.Url)
            </div>
        </p>
        <p><input type="submit" id="ShortenSubmit" class="btn btn-primary btn-lg disabled" disabled value="Shorten Url"></p>
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Recently Shortened Urls</h2>
        <table class="table table-striped table-bordered">
            <tr>
                <th>Url</th>
                <th>ShortUrl</th>
                <th>Created</th>
                <th>Visits</th>
            </tr>
            @foreach (ShortenedUrl item in ViewBag.Recent)
            {
                <tr>
                    <td>item.Url</td>
                    <td>item.Id</td>
                    <td>item.Created</td>
                    <td>0</td>
                </tr>
            }
        </table>
        <p>
            <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
        </p>
    </div>
</div>

@section Scripts {
    <script>
        var urlInputSelector = "#@Html.IdFor(m => m.Url)";
        var indexPage = new ShortUrl.IndexPage($(urlInputSelector), $("#ShortenSubmit"));
    </script>
}